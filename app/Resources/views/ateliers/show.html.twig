{% extends 'base.html.twig' %}

{% block body %}
    <h1>Atelier</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ atelier.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ atelier.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ atelier.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ateliers_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('ateliers_edit', { 'id': atelier.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
