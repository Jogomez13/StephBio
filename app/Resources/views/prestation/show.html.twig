{% extends 'base.html.twig' %}

{% block body %}
    <h1>Prestation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ prestation.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ prestation.titre }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ prestation.image }}</td>
            </tr>
            <tr>
                <th>Soustitre</th>
                <td>{{ prestation.soustitre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ prestation.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('prestation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('prestation_edit', { 'id': prestation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
